<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

<div class="media">
  <% if @messages.present? %>
    <ul class="mail-list">
      <% @messages.each do |message| %>
            <li><%= message.body.html_safe %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_for @message, :url => url_for(:controller => 'messages', :action => 'create'), :method => 'post', html: {class: "white-pink"}, remote: true  do |f| %>

<div class="field">
  <%= f.text_area :body, autofocus: true, placeholder: 'Message' %>
</div>

<%= f.hidden_field :conversation_id, :value => @conversation.id %>
<%= f.hidden_field :provider_id, :value => @conversation.provider_id %>
<%= f.hidden_field :user_id, :value =>  @conversation.user_id %>
<%= f.hidden_field :userticks, :value =>  'blue' %>
<%= f.submit "New Message" %>

<% end %>
