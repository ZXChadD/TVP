<h3>Job History</h3>
<div class="panel panel-default">
  <table class="table">
    <tr>
      <td>#</td>
      <td>Date</td>
      <td>Summary</td>
      <td>Job Status</td>
      <td>Invoice Status</td>
      <td>Invoice Number</td>
      <td>Customer name</td>
    </tr>
    <% @past_joblistings.each_with_index do |past_joblisting, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= past_joblisting.created_at.strftime("%F") %></td>
        <td><%= link_to "#{past_joblisting.description.capitalize}", joblisting_path(past_joblisting) %></td>
        <td><%= past_joblisting.status.capitalize %></td>
        <td><%= past_joblisting.invoice.status.capitalize %></td>
        <td><%= link_to "#{past_joblisting.invoice.invoice_ref}", invoice_path(past_joblisting.invoice) %></td>
        <td><%= link_to "#{User.find(past_joblisting.user_id).firstname}", user_path(User.find(past_joblisting.user_id)) %></td>
      </tr>
    <% end %>
  </table>
</div>
<%= will_paginate @past_joblistings %> 