<div class="index">
  <head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#menu1">New Jobs</a></li>
        <li><a data-toggle="tab" href="#menu2">Current Jobs</a></li>
        <li><a data-toggle="tab" href="#menu3">Job History</a></li>
        <li><a data-toggle="tab" href="#menu4">Schedule</a></li>

      </ul>

      <div class="tab-content topBefore" id="form">
        <div id="menu1" class="tab-pane fade in active">
          <h3>New Jobs</h3>
          <div class="panel panel-default">
            <table class="table">
              <tr>
                <td>#</td>
                <td>Date</td>
                <td>Summary</td>
                <td>Status</td>
                <td>Customer name</td>
                <td>Response</td>
              </tr>
              <% @new_joblistings.each_with_index do |new_joblisting, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= new_joblisting.created_at.strftime("%F") %></td>
                  <td><%= link_to "#{new_joblisting.description}", joblisting_path(new_joblisting) %></td>
                  <td><%= new_joblisting.status %></td>
                  <td><%= link_to "#{User.find(new_joblisting.user_id).firstname}", user_path(User.find(new_joblisting.user_id)) %></td>
                  <td><%= link_to "Accept", accept_joblisting_path(new_joblisting), method: :put %></td>
                  <td><%= link_to "Decline", decline_joblisting_path(new_joblisting), method: :put %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>

        <div id="menu2" class="tab-pane fade">
          <h3>Current Jobs</h3>
          <div class="panel panel-default">
            <table class="table">
              <tr>
                <td>#</td>
                <td>Date</td>
                <td>Summary</td>
                <td>Status</td>
                <td>Customer name</td>
              </tr>
              <% @current_joblistings.each_with_index do |current_joblisting, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= current_joblisting.created_at.strftime("%F") %></td>
                  <td><%= link_to "#{current_joblisting.description}", joblisting_path(current_joblisting) %></td>
                  <td><%= current_joblisting.status %></td>
                  <td><%= link_to "#{User.find(current_joblisting.user_id).firstname}", user_path(User.find(current_joblisting.user_id)) %></td>
                  <td><%= link_to "Send Invoice", new_invoice_path(joblisting_id: current_joblisting) %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>

        <div id="menu3" class="tab-pane fade">
          <h3>Job History</h3>
          <div class="panel panel-default">
            <table class="table">
              <tr>
                <td>#</td>
                <td>Date</td>
                <td>Summary</td>
                <td>Status</td>
                <td>Customer name</td>
              </tr>
              <% @past_joblistings.each_with_index do |past_joblisting, index| %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= past_joblisting.created_at.strftime("%F") %></td>
                  <td><%= link_to "#{past_joblisting.description}", joblisting_path(past_joblisting) %></td>
                  <td><%= past_joblisting.status %></td>
                  <td><%= link_to "#{User.find(past_joblisting.user_id).firstname}", user_path(User.find(past_joblisting.user_id)) %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>

        <div id="menu4" class="tab-pane fade">
          <h3>Schedule</h3>

          <div class="panel panel-default">
            <% if current_provider.schedule.present? %>
              <%= form_for @schedule do |f| %>
                <div class='field'>
                  <p>Available days?</p>
                  <%= label_tag 'date_weekdays', 'Weekdays' %>
                  <%= check_box_tag 'schedule[date][]', 'Weekdays', checked_d('Weekdays'), id: 'date_weekdays' %>

                  <%= label_tag 'date_weekends', 'Weekends' %>
                  <%= check_box_tag 'schedule[date][]', 'Weekends', checked_d('Weekends'), id: 'date_weekends' %>

                  <%= label_tag 'date_all', 'All' %>
                  <%= check_box_tag 'schedule[date][]', 'All', checked_d('All'), id: 'date_all' %>
                </div>

                <div class='field'>
                  <p>Available timings?</p>
                  <%= label_tag 'time_morning', 'Morning' %>
                  <%= check_box_tag 'schedule[time][]', 'Morning', checked_t('Morning'), id: 'time_morning' %>

                  <%= label_tag 'time_afternoon', 'Afternoon' %>
                  <%= check_box_tag 'schedule[time][]', 'Afternoon', checked_t('Afternoon'), id: 'time_afternoon' %>

                  <%= label_tag 'time_evening', 'Evening' %>
                  <%= check_box_tag 'schedule[time][]', 'Evening', checked_t('Evening'), id: 'time_evening' %>
                </div>
                <%= f.submit %>
              <% end %>
            <% else %>
              <%= form_for @schedule, url: schedules_path(@provider) do |f| %>
                <div class='field'>
                  <p>Available days?</p>
                  <%= label_tag 'date_weekdays', 'Weekdays' %>
                  <%= check_box_tag 'schedule[date][]', 'Weekdays', checked_d('Weekdays'), id: 'date_weekdays' %>

                  <%= label_tag 'date_weekends', 'Weekends' %>
                  <%= check_box_tag 'schedule[date][]', 'Weekends', checked_d('Weekends'), id: 'date_weekends' %>

                  <%= label_tag 'date_all', 'All' %>
                  <%= check_box_tag 'schedule[date][]', 'All', checked_d('All'), id: 'date_all' %>
                </div>

                <div class='field'>
                  <p>Available timings?</p>
                  <%= label_tag 'time_morning', 'Morning' %>
                  <%= check_box_tag 'schedule[time][]', 'Morning', checked_t('Morning'), id: 'time_morning' %>

                  <%= label_tag 'time_afternoon', 'Afternoon' %>
                  <%= check_box_tag 'schedule[time][]', 'Afternoon', checked_t('Afternoon'), id: 'time_afternoon' %>

                  <%= label_tag 'time_evening', 'Evening' %>
                  <%= check_box_tag 'schedule[time][]', 'Evening', checked_t('Evening'), id: 'time_evening' %>
                </div>
                <%= f.submit %>
              <% end %>
            <% end %>
          </div>
        </div>

      </div>
    </div>
  </body>
</div>
