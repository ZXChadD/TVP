<div class="row" id="whole-form">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 ">
    <%= bootstrap_form_for @joblisting, html: {multipart: true, class: "panel panel-primary"}, method: :post do |f| %>
    <div class="panel-heading" id="job-heading"><h4> Request </h4> </div>
    <div class="form-padding">
      <div class='field'>
        <h4 class="question"></h4>
        <%= f.select :issue, ['Operation optimization', 'Cost reduction', 'Growth' ,'Strategy', 'Mergers and Acquisition', 'Market Entry', 'Financial due diligence', 'Product development', 'Digital transformation'] %>
      </div>

      <br/>

      <div class="field">
        <h4 class="question"></h4>
        <%= f.select :budget, ['20,000','30,000','40,000','50,000'] %>
      </div>

      <br/>

      <div class="field">
        <%= f.text_area :description, autofocus: true, placeholder: 'Description' %>
      </div>

      <div class='actions'>
        <%= f.submit "Send Request", class:"btn btn-success btn-block" %>
      </div>

      <% end %>

    </div>

  </div>
</div>
