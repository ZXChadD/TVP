<header class="heading">
    <div class="container">
    <div class="row">
      <div id="com_name", class="col-md-6 col-md-offset-3" >
        <%= link_to "Cool Joe", users_path%>
      </div>
    </div>
      <div id="banner_links", class="row">
        <ul class="col-md-6 col-md-offset-3">
          <% if provider_signed_in? || user_signed_in? %>
            <% if provider_signed_in? %>
              <span><%= link_to 'Home', controller: :providers, action: :index %></span>
              <span><%= link_to 'Current jobs', provider_path(current_provider) %></span>
              <span><%= link_to 'Job history', provider_path(current_provider) %></span>              
              <span><%= link_to 'Profile', provider_path(current_provider) %></span>
              <span><%= link_to 'Log out', destroy_provider_session_path, method: :delete %></span>
            <% else %>
              <% if current_user.is_admin %>
                <span><%= link_to 'Log out', destroy_user_session_path, method: :delete %></span>
              <% else %>
                <span><%= link_to 'Home', controller: :users, action: :index %></span>
                <span>New job</span>
                <span><%= link_to "Electricians", electricians_path %></span>
                <span><%= link_to 'Profile', user_path(current_user) %></span>
                <span><%= link_to 'Log out', destroy_user_session_path, method: :delete %></span>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
</header>
