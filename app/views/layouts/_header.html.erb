<header class='heading'>
    <div class='container'>
    <div class='row'>
      <div id='com_name', class='col-md-6 col-md-offset-3' >
        <% if provider_signed_in? || user_signed_in? %>
          <% if provider_signed_in? %>
            <%= link_to 'Cool Joe', providers_path %>
          <% else %>
            <%= link_to 'Cool Joe', users_path %>
          <% end %>
        <% else %>
          <%= link_to 'Cool Joe', homepage_path %>
        <% end %>
      </div>
    </div>
      <div class='row'>
        <div id='banner_links', class='col-md-6 col-md-offset-3'>
          <% if provider_signed_in? %>
            <%= render partial: 'layouts/provider_signin' %>
          <% end %>
          <% if user_signed_in? %>
            <% if current_user.is_admin %>
              <%= render partial: 'layouts/admin_signin' %>
            <% else %>
              <%= render partial: 'layouts/user_signin' %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
</header>
